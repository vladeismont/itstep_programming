<Window x:Class="first.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="525">
    <DockPanel>
        <Rectangle Stroke="Black" Height="100" DockPanel.Dock="Bottom"></Rectangle>
        <Grid DockPanel.Dock="Left" Width="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle Fill="Pink" Grid.Column="0" Grid.Row="0"></Rectangle>
            <Button Grid.Column="0" Grid.Row="1">Hello</Button>
            <Button Grid.Column="1" Grid.Row="1">Bye</Button>
        
        </Grid>
        <Rectangle Fill="LightPink" Height="100" DockPanel.Dock="Bottom"></Rectangle>
        <Rectangle Fill="LightBlue"></Rectangle>
    </DockPanel>
</Window>
