<Window x:Class="ExamplesRadioCheckBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <RadioButton Content="С#"   IsChecked="True" GroupName="Good"  Margin="10,5"  FontWeight="Bold" FontSize="14"></RadioButton>
        <RadioButton Content="Java" GroupName="Good"  Margin="10,5"  FontWeight="Bold" FontSize="14"></RadioButton>
        <RadioButton Content="PHP"  IsChecked="True" GroupName="Bad"   Margin="10,5"  FontWeight="Bold" FontSize="14"></RadioButton>
    </StackPanel>
</Window>
