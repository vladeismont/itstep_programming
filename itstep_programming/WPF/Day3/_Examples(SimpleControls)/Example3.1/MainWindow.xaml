<Window x:Class="Example3._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонтсрация кнопок" Height="350" Width="525">
    <StackPanel>
        <Button Content="Button" Margin="20,5" Click="Button_Click" ClickMode="Hover"></Button>
        <Label x:Name="lbButton" Margin="20,5" FontSize="12" FontWeight="Bold"></Label>
        <ToggleButton Content="ToggleButton" Margin="20,5" Click="ToggleButton_Click"></ToggleButton>
        <Label x:Name="lbToggleButton" Margin="20,5" FontSize="12" FontWeight="Bold"></Label>
        <RepeatButton Content="RepeatButton" Margin="20,5" Click="RepeatButton_Click"></RepeatButton>
        <Label x:Name="lbRepeateButton" Margin="20,5" FontSize="12" FontWeight="Bold"></Label>
    </StackPanel>
</Window>
