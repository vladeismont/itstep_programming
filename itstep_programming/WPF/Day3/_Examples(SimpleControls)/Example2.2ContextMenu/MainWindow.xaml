<Window x:Class="Example2._2ContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонстрация контекстного меню" Height="300" Width="525">
    <StackPanel Orientation="Vertical">
        <StackPanel Background="WhiteSmoke" Height="150">
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Создать новый объект"></MenuItem>
                    <MenuItem Header="Удалить выделенный объект"></MenuItem>
                    <Separator/>
                    <MenuItem Header="Закрыть приложение"></MenuItem>
                </ContextMenu>
            </StackPanel.ContextMenu>
        </StackPanel>
        <StackPanel Background="LightBlue"  Height="150">
            <StackPanel.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Копировать"></MenuItem>
                    <MenuItem Header="Вырезать"></MenuItem>
                    <Separator/>
                    <MenuItem Header="Вставить"></MenuItem>
                </ContextMenu>
            </StackPanel.ContextMenu>
        </StackPanel>
    </StackPanel>
</Window>
