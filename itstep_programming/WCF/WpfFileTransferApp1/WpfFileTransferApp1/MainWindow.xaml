<Window x:Class="WpfFileTransferApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfFileTransferApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10 10 10 10"  x:Name="pathLbl" Grid.Row="0" Grid.Column="0" />
        <Button Click="pathBtn_Click" Margin="10 10 10 10" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" x:Name="pathBtn" Content="pathBtn" Grid.Row="0" Grid.Column="1" FontSize="15"></Button>
        <Button Click="syncBtn_Click" Margin="10 10 10 10" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" x:Name="syncBtn" Content="syncBtn" Grid.Row="1" Grid.ColumnSpan="2"></Button>
    </Grid>
</Window>
